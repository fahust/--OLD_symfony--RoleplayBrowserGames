                    <figcaption><h2><span>Quêtes</span></h2></figcaption>
                  </div>
                </div>
              </a>
            </figure>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center col-10 col-sm-10 col-md-4 col-lg-2 col-xl-2" style="margin: 70px;">
      <div class="slider-ctr">
        <div class="slider-scroll">
          <div class="slide">
            <figure>
              <a class="nav-link" href="{% if app.user %}{{ path('skill') }}{% else %}{{ path('security_registration') }}{% endif %}" title="skill-page"> 
                <div class="image-ctr">
                  <div class="image skill" data-index="">
                    <div class="light">
                    </div>
                    <figcaption><h2><span>Compétences</span></h2></figcaption>
                  </div>
                </div>
              </a>
            </figure>
          </div>
        </div>
      </div>
    </div>
  </div>

    
{% endblock %}