{% extends 'base.html.twig' %}

{% block title %}Hello PlayerController!{% endblock %}

{% block body %}




        <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark" style="background-image:url(http://images5.fanpop.com/image/photos/24800000/Fantasy-Heroes-fantasy-24871751-1920-1200.jpg); background-size: cover;background-position: center;
">
        <div class="col-md-6 px-0" style="padding: 50px;">
          <h1 class="display-4 font-italic">Page des personnages</h1>
          <p class="lead my-3">Sur cet page vous pourrez visualiser, editer, supprimer ou créer de nouveau personnages.</p>
          <!--<p class="lead mb-0"><a href="{{ path('monster_create', {id: 0}) }}" class="text-white font-weight-bold">Créer un monstre</a></p>-->
          <a class="btn btn-primary" href="{{ path('player_create', {id: 0}) }}">Créer un joueur</a>
        </div>
      </div>
    <div class="container" style="">


    {% for message in app.flashes('succes') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}

<div class="container" style="">
    <p class="lead my-3">Les personnages présents sont utilisable dans les quêtes.
    Bien sur les personnages ne peuvent êtes supprimé et edité que par leur créateur ou bien des admins. </p>


    
            <div class="row" id="div3" style="display:none;">
            
                {% for player in players %}
                {% if player.createur == user.id %}
                <!-- <div class="col-12 col-md"> -->
                <div class="d-flex  justify-content-center col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4" style="padding: 30px;">

                        <div class="card " style="width: 18rem;padding: 10px;">
            <img class="card-img-top rounded img-fluid img-thumbnail" align="middle" style="width: 17rem;height: auto;margin: auto auto;" src="{{ player.image }}" alt="Card image cap">
            <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item list-group-item-action"><h5 class="card-title"> {{ player.name }} </h5></li>
                <li class="list-group-item list-group-item-action  flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                <p class="card-text">Niveau du joueur : {{ player.level }}</p>
                
                <p class="card-text">Points de compétences : {{ player.skillpnt }}</p>
                
                <!--<small>3 days ago</small>-->

                </div>
                </li>
                <li class="list-group-item list-group-item-action">
                
                <div class="row" >
                    <div class="col-12">
                        <div class="list-group" id="list-tab" role="tablist">
                        <!--<a class="list-group-item list-group-item-action active" id="list-home-list{{ player.id }}" data-toggle="list" href="#list-home{{ player.id }}" role="tab" aria-controls="home{{ player.id }}">Vie</a>-->
                        <a class="list-group-item list-group-item-action" id="list-profile-list{{ player.id }}" data-toggle="list" href="#list-profile{{ player.id }}" role="tab" aria-controls="profile{{ player.id }}">vie</a>
                        <a class="list-group-item list-group-item-action" id="list-messages-list{{ player.id }}" data-toggle="list" href="#list-messages{{ player.id }}" role="tab" aria-controls="messages{{ player.id }}">defense</a>
                        <a class="list-group-item list-group-item-action" id="list-settings-list{{ player.id }}" data-toggle="list" href="#list-settings{{ player.id }}" role="tab" aria-controls="settings{{ player.id }}">Attaque</a>
                        <a class="list-group-item list-group-item-action" id="list-autre-list{{ player.id }}" data-toggle="list" href="#list-autre{{ player.id }}" role="tab" aria-controls="autre{{ player.id }}">Compétences</a>
                        </div>
                    </div>
                    
                    </div>
                
                </li>
                <li class="list-group-item list-group-item-action"><div class="col-12">
                        <div class="tab-content" id="nav-tabContent">
                        <!--<div class="tab-pane fade show active" id="list-home{{ player.id }}" role="tabpanel" aria-labelledby="list-home-list{{ player.id }}">description </div>-->
                        <div class="tab-pane fade" id="list-profile{{ player.id }}" role="tabpanel" aria-labelledby="list-profile-list{{ player.id }}">Nombre de point de vie du personnage {{ player.hp }}</div>
                        <div class="tab-pane fade" id="list-messages{{ player.id }}" role="tabpanel" aria-labelledby="list-messages-list{{ player.id }}">Defense du personnage {{ player.hp }}</div>
                        <div class="tab-pane fade" id="list-settings{{ player.id }}" role="tabpanel" aria-labelledby="list-settings-list{{ player.id }}">Degat d'attaque du personnage {{ player.atk }}</div>
                        <div class="tab-pane fade" id="list-autre{{ player.id }}" role="tabpanel" aria-labelledby="list-autre-list{{ player.id }}"><ul>{% for skill in player.skillbdd %}<li>{{ skill.name }}</li>{% endfor %}</ul></div>
                        </div>
                    </div></li>
                <li class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center"><a href="{{ path('player_edit', {id: player.id}) }}" class="btn btn-primary">editer</a> {{ include('player/_delete_form.html.twig') }}</li>
            </ul>
                
                
            
                
                
            </div>
            </div>
            </div>
            {% endif %}
                {% endfor %}

            </div>
            </div>




{% endblock %}
