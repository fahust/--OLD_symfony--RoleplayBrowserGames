{% extends 'base.html.twig' %}

{% block title %}RollCardPlay - Account page{% endblock %}
{% block description %}<meta name="description" content="This is the profile page to modify your user account and view your important information" />
{% endblock %}
{% block body %}
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark" style="background-image:url({{ asset('ressources/wallpaper-fantasy-sepik-min.jpg') }}); background-size: cover;background-position: center;">
    <div class="col-md-6 px-0" style="padding: 50px;">
      <h1 class="display-4 font-italic">Account page</h1>
      <p class="lead my-3"></p>
    </div>
  </div>
  <div class="container" style="">
    {% for message in app.flashes('succes') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
      <div class="alert alert-warning">
        {{ message }}
      </div>
    {% endfor %}
    {{ form_start(form) }}
      {{ form_row(form.username, {'label': 'User name','attr': {'placeholder': 'User name ...'}}) }}
      {{ form_row(form.email, {'label': 'Email address','attr': {'placeholder': 'User\'s email address ...'}}) }}
      {{ form_row(form.password, {'label': 'User password','attr': {'placeholder': 'Insert your password ...'}}) }}
      {{ form_row(form.confirm_password, {'label': 'Password confirmation','attr': {'placeholder': 'Repeat your password'}}) }}
      <button type="submit" class="btn btn-success">Editing</button>
    {{ form_end(form) }}
    <br><br>
    <a href="{{ path('security_logout') }}" class="btn btn-danger" title="logout">Logout</a>
    <a class="btn btn-danger" href="{% if app.user %}{{ path('delete_account') }}{% else %}{{ path('security_registration') }}{% endif %}" onclick="return confirm('Are you sure you want to delete your account ?')" title="delete-account"> Delete the account </a>
  </div>
{% endblock %}

