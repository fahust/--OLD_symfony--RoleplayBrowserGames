<form method="post" action="{{ path('skill.delete', {id: skills.id}) }}" style= display:inline-block onsubmit="return confirm('{% trans %}Are you sure you want to delete ?{% endtrans %}')">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skills.id) }}">
    <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete ?')">{% trans %}Delete{% endtrans %}</button>
</form>